all:\
create_obj_dir\
$(DIR_O)/log.o\
$(DIR_O)/log_tools.o
	echo Done.

create_obj_dir:
	$(CREATE_OBJ_DIR)

clean:
	$(CLEAN)

$(DIR_O)/log.o:\
create_obj_dir\
src/log.h\
src/log.cpp
	$(CC) $(CFLAGS) src/log.cpp -o $(DIR_O)/log.o

$(DIR_O)/log_tools.o:\
$(DIR_O)/log.o\
src/log_tools.h\
src/log_tools.cpp
	$(CC) $(CFLAGS) src/log_tools.cpp -o $(DIR_O)/log_tools.o

a.out:\
$(DIR_O)/log.o\
$(DIR_O)/log_tools.o
	$(CC) $(DEBUG) $(OPTIMIZATION) $(WARNING_FLAGS) -ansi -pedantic -std=c++11 -fno-rtti -pthread main.cpp $(DIR_O)/log_tools.o $(DIR_O)/log.o
